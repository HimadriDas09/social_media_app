<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href='/'>
                    Home
                </a>
            </p>
        </div>
        <!-- so how would the views know > if user is authenticated or not > res.locals will contain the currently authenticated user -->
        <div class="auth-links">
            <ul>
                <% if(locals.user){ %>
                    <!-- no null > display: user_name and sign_out option -->
                    <% if(user.avatar) { %>
                        <li>
                            <img src="<%= user.avatar %>" >
                        </li>
                    <% }%>
                    <li>
                        <a href="/users/profile/<%= user.id %>">
                            <%= user.name %>
                        </a>
                    </li>
                    <li>
                        <a onclick="event.preventDefault(); document.getElementById('hidden-logout-form').submit()" >Sign Out</a>
                        
                        <form id="hidden-logout-form" action="/users/sign-out" method="POST" style="display: none;">
                        <!-- why this form is used ? => bcz by default <a> sends a GET req and on /users/sign-out we wanted a POST req > but we cannot modify <a> to send a POST req, so use this form elem which doesn't take up space -->
                        </form>
                    </li>
                <% }else{ %> 
                    <!-- null > display: sign_in and sign_up -->
                    <li>
                        <a href="/users/sign-in">Sign In</a>
                    </li>
                    <li>
                        <a href="/users/sign-up">Sign Up</a>
                    </li>
                <% } %>  
            </ul> 
        </div>
    </nav>
</header>
